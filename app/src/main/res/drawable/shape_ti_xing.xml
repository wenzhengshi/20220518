<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 梯形 -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:pivotX="-45%"
            android:pivotY="85%">
            <shape android:shape="rectangle">
                <size
                    android:width="1dp"
                    android:height="8dp" />
                <solid android:color="#D81B60" />
            </shape>
        </rotate>
    </item>
</layer-list>

