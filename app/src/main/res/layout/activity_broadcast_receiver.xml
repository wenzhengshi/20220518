<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".BroadcastReceiverActivity">

    <Button
        android:id="@+id/my_broad_cast_btn"
        app:layout_constraintTop_toTopOf="parent"
        android:text="开启广播"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:enabled="false"
        android:id="@+id/my_broad_cast_btn_close"
        app:layout_constraintTop_toBottomOf="@+id/my_broad_cast_btn"
        android:text="关闭广播"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="广播状态"
        android:id="@+id/show_broadcast_state"
        app:layout_constraintTop_toBottomOf="@+id/my_broad_cast_btn_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>