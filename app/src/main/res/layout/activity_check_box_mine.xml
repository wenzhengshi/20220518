<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBoxActivityMine">
    <CheckBox
        android:checked="true"
        android:id="@+id/my_check_box"
        android:text="羽毛球"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:checked="true"
        android:textColor="@color/purple_200"
        android:id="@+id/my_check_box2"
        android:text="篮球"
        app:layout_constraintTop_toBottomOf="@+id/my_check_box"
        app:layout_constraintLeft_toLeftOf="@+id/my_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/my_check_box2"
        app:layout_constraintLeft_toLeftOf="@+id/my_check_box2"
        android:id="@+id/my_check_box3"
        android:text="乒乓球"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:checked="true"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/my_check_box3"
        app:layout_constraintLeft_toLeftOf="@+id/my_check_box3"
        android:id="@+id/my_check_box4"
        android:text="足球"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>